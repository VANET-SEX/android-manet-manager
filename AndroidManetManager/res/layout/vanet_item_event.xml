<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/textView_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    
    <TextView
        android:id="@+id/textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:layout_toRightOf="@id/textView_event"
        android:layout_alignBaseline="@id/textView_event"
        android:textSize="9dp" />
    
    <TextView
        android:id="@+id/textView_delay_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/textView_distance"
        android:layout_alignBaseline="@id/textView_event"
        android:textSize="8dp"
        android:text="@string/main_layout_vanet_delay_label" />
    
    <TextView
        android:id="@+id/textView_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:layout_toRightOf="@id/textView_delay_label"
        android:layout_alignBaseline="@id/textView_event"
        android:textSize="9dp" />
    
    <TextView
        android:id="@+id/textView_src_address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_below="@id/textView_event"
        android:layout_alignParentLeft="true"
        android:textSize="8dp"
        android:text="@string/main_layout_vanet_src_address_label" />
    
    <TextView
        android:id="@+id/textView_src_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:layout_toRightOf="@id/textView_src_address_label"
        android:layout_alignBaseline="@id/textView_src_address_label"
        android:textSize="9dp" />

</RelativeLayout>